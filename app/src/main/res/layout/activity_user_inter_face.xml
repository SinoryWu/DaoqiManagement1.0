<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserInterFaceActivity">

    <LinearLayout
        android:id="@+id/user_interface_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/user_interface_cv_tab"
        android:background="#FAFAFA"
        android:orientation="vertical" >
    </LinearLayout>
    
    <androidx.cardview.widget.CardView
        android:id="@+id/user_interface_cv_tab"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_alignParentBottom="true"
        app:cardElevation="25dp"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/user_interface_rl_tab_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/user_interface_iv_tab_home"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:src="@mipmap/tab_home_false_icon"
                    android:scaleType="fitXY"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/user_interface_rl_tab_mentors"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/user_interface_iv_tab_mentors"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:src="@mipmap/tab_mentors_false_icon"
                    android:scaleType="fitXY"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/user_interface_rl_tab_toast"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/user_interface_iv_tab_toast"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:src="@mipmap/tab_toast_false_icon"
                    android:scaleType="fitXY"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/user_interface_rl_tab_person"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/user_interface_iv_tab_person"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:src="@mipmap/tab_person_false_icon"
                    android:scaleType="fitXY"/>
            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>