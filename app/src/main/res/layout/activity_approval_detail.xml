<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ApprovalDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:layout_marginTop="-21dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/approval_detail_rl_finish"
                    android:layout_width="70dp"
                    android:layout_height="58dp"
                    android:gravity="center"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="20dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/arrow_left_black_icon"/>
                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="审批详情"
                    android:textColor="#ff4c5264"
                    android:textSize="17sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="37dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="发起人"
                    android:textColor="#ffbcc5d3"
                    android:textSize="13sp"
                    android:layout_marginTop="87dp"
                    android:layout_marginLeft="33dp"/>



                <TextView
                    android:id="@+id/approval_detail_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"

                    android:textColor="#ff8a56ac"
                    android:textSize="17sp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="104dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E2E8ED"
                    android:layout_marginTop="154dp"/>
                
                <RelativeLayout
                    android:id="@+id/approval_detail_rl_progress_log"
                    android:layout_width="86dp"
                    android:layout_height="34dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginLeft="292dp">
                    <ImageView
                        android:layout_width="86dp"
                        android:layout_height="34dp"
                        android:src="@mipmap/progress_log_icon"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="流程日志"
                        android:textColor="#ff8a56ac"
                        android:textSize="14sp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="创建时间"
                    android:textColor="#ffbcc5d3"
                    android:textSize="13sp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="179dp"/>

                <TextView
                    android:id="@+id/approval_detail_tv_createTime"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"

                    android:textColor="#ff4c5264"
                    android:textSize="17sp"
                    android:layout_marginTop="196dp"
                    android:layout_marginLeft="33dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E2E8ED"
                    android:layout_marginTop="246dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="关联医院"
                    android:textColor="#ffbcc5d3"
                    android:textSize="13sp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="272dp"
                    />

                <TextView
                    android:id="@+id/approval_detail_tv_hospitalName"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"

                    android:textColor="#ff8a56ac"
                    android:textSize="17sp"
                    android:layout_marginTop="288dp"
                    android:layout_marginLeft="33dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="338dp"
                    android:background="#E2E8ED"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="审批类型"
                    android:textColor="#ffbcc5d3"
                    android:textSize="13sp"
                    android:layout_marginTop="364dp"
                    android:layout_marginLeft="33dp"/>

                <TextView
                    android:id="@+id/approval_detail_tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"

                    android:textColor="#ff4c5264"
                    android:textSize="17sp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="380dp"/>

                <ImageView
                    android:id="@+id/approval_detail_iv_type"
                    android:layout_width="71dp"
                    android:layout_height="71dp"

                    android:layout_marginTop="348dp"
                    android:layout_marginLeft="309dp"/>

                <View
                    android:id="@+id/approval_detail_last_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E2E8ED"
                    android:layout_marginTop="430dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_below="@+id/approval_detail_last_line">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:text="内容："
                        android:textColor="#ffbcc5d3"
                        android:textSize="13sp"
                        android:layout_marginTop="26dp"
                        android:layout_marginLeft="33dp"/>

                    <TextView
                        android:id="@+id/approval_detail_tv_content"
                        android:layout_width="345dp"
                        android:layout_height="wrap_content"
                       android:minHeight="0dp"
                        android:textColor="#ff4c5264"
                        android:textSize="14sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="13dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:text="附件："
                        android:textColor="#ffbcc5d3"
                        android:textSize="13sp"
                        android:layout_marginTop="14dp"
                        android:layout_marginLeft="33dp"/>

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:layout_marginTop="13dp"
                        android:id="@+id/approval_detail_iv_picture"
                        android:layout_width="346dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="33dp"
                        android:minHeight="0dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:text="审批意见："
                        android:textColor="#ffbcc5d3"
                        android:textSize="13sp"
                        android:layout_marginTop="26dp"
                        android:layout_marginLeft="33dp"/>

                    <TextView
                        android:id="@+id/approval_detail_tv_opinion"
                        android:layout_width="345dp"
                        android:layout_height="wrap_content"
                        android:minHeight="0dp"
                        android:textColor="#ff4c5264"
                        android:textSize="14sp"
                        android:layout_gravity="center_horizontal"/>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="85dp"/>


                </LinearLayout>






            </RelativeLayout>


        </ScrollView>

        <LinearLayout
            android:id="@+id/approval_detail_ll_btn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/approval_detail_btn_pass"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/approval_btn_left_background"
                android:text="通过"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/approval_detail_btn_no_pass"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/approval_btn_right_background"
                android:textColor="#FFFFFF"
                android:text="不通过"/>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>