<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="346dp"
    android:layout_height="252dp"
   android:background="@drawable/dialog_feed_back_background">

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="申请正式报备"
            android:textColor="#ff8a56ac"
            android:textSize="25sp"
            android:layout_marginTop="32dp"/>
    <TextView
        android:id="@+id/formal_dialog_tv_payProtect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff4c5264"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"/>
    <TextView
        android:id="@+id/formal_dialog_tv_payAmount"
        android:layout_below="@+id/formal_dialog_tv_payProtect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff4c5264"
        android:textSize="15sp"
        android:layout_centerHorizontal="true" />
    
    <Button
        android:id="@+id/dialog_formal_report_btn_confirm"
        android:layout_width="133dp"
        android:layout_height="55dp"
        android:background="@drawable/dialog_formal_report_left_btn_background"
        android:text="是的"
        android:textSize="13sp"
        android:textColor="#ffffff"
        android:layout_marginTop="156dp"
        android:layout_marginLeft="41dp"/>
    <Button
        android:id="@+id/dialog_formal_report_btn_cancel"
        android:layout_width="133dp"
        android:layout_height="55dp"
        android:background="@drawable/dialog_formal_report_right_btn_background"
        android:text="不"
        android:textSize="13sp"
        android:textColor="#ffffff"
        android:layout_marginTop="156dp"
        android:layout_marginLeft="174dp"/>




</RelativeLayout>