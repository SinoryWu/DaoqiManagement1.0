<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="346dp"
    android:layout_height="456dp"
   android:background="@drawable/dialog_add_contact_background">

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="添加联系人"
            android:textColor="#ff8a56ac"
            android:textSize="25sp"
            android:layout_marginTop="32dp"/>
    <EditText
        android:id="@+id/dialog_add_contact_et_name"
        android:layout_width="265dp"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"
        android:background="@drawable/dialog_et_feed_back_background"
        android:singleLine="true"
        android:maxLines="1"
        android:hint="姓名"
        android:textSize="15sp"
        android:paddingLeft="11dp"/>

    <EditText
        android:id="@+id/dialog_add_contact_et_mobile"
        android:layout_width="265dp"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="146dp"
        android:background="@drawable/dialog_et_feed_back_background"
        android:singleLine="true"
        android:maxLines="1"
        android:inputType="number"
        android:maxLength="11"
        android:hint="手机号"
        android:textSize="15sp"
        android:paddingLeft="11dp"/>

    <EditText
        android:id="@+id/dialog_add_contact_et_department"
        android:layout_width="265dp"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="210dp"
        android:background="@drawable/dialog_et_feed_back_background"
        android:singleLine="true"
        android:maxLines="1"
        android:hint="科室"
        android:textSize="15sp"
        android:paddingLeft="11dp"/>


    <EditText
        android:id="@+id/dialog_add_contact_et_position"
        android:layout_width="265dp"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="274dp"
        android:background="@drawable/dialog_et_feed_back_background"
        android:singleLine="true"
        android:maxLines="1"
        android:hint="职位"
        android:textSize="15sp"
        android:paddingLeft="11dp"/>

    <Button
        android:id="@+id/dialog_add_contact_btn_confirm"
        android:layout_width="133dp"
        android:layout_height="55dp"
        android:background="@drawable/dialog_feed_back_btn_left_background"
        android:text="提交"
        android:textSize="13sp"
        android:textColor="#8A56AC"
        android:layout_marginTop="365dp"
        android:layout_marginLeft="41dp"/>
    <Button
        android:id="@+id/dialog_add_contact_btn_cancel"
        android:layout_width="133dp"
        android:layout_height="55dp"
        android:background="@drawable/dialog_feed_back_btn_right_background"
        android:text="取消"
        android:textSize="13sp"
        android:textColor="#4C5264"
        android:layout_marginTop="365dp"
        android:layout_marginLeft="174dp"/>




</RelativeLayout>