<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NoticeDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:layout_marginTop="-21dp">

        <TextView
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="通知详情"
            android:textColor="#ff4c5264"
            android:textSize="17sp"
            android:layout_centerHorizontal="true"/>

        <RelativeLayout
            android:id="@+id/notice_detail_rl_finish"
            android:layout_width="70dp"
            android:layout_height="58dp"
            android:gravity="center"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="20dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="18dp"
                android:src="@mipmap/arrow_left_black_icon"/>
        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:text="通知类型"
            android:textColor="#ffbcc5d3"
            android:textSize="13sp"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="91dp"/>

        <TextView
            android:id="@+id/notice_detail_tv_type"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:textColor="#ff4c5264"
            android:textSize="17sp"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="108dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="158dp"
            android:background="#E2E8ED"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:text="时间"
            android:textColor="#ffbcc5d3"
            android:textSize="13sp"
            android:layout_marginTop="183dp"
            android:layout_marginLeft="33dp"/>

        <TextView
            android:id="@+id/notice_detail_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:textColor="#ff4c5264"
            android:textSize="17sp"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="200dp"/>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="250dp"
            android:background="#E2E8ED"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:text="内容："
            android:textColor="#ffbcc5d3"
            android:textSize="13sp"
            android:layout_marginTop="276dp"
            android:layout_marginLeft="33dp"/>

        <TextView
            android:id="@+id/notice_detail_tv_content"
            android:layout_width="346dp"
            android:layout_height="wrap_content"

            android:textColor="#ff4c5264"
            android:textSize="14sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="308dp"/>


    </RelativeLayout>

</RelativeLayout>