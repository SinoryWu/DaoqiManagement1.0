<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchPrepareListActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-21dp"
        android:background="#FFFFFF">

        <RelativeLayout
            android:id="@+id/search_prepare_list_rl_finish"
            android:layout_width="70dp"
            android:layout_height="58dp"
            android:gravity="center"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="20dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="18dp"
                android:src="@mipmap/arrow_left_black_icon"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="选择医院"
            android:textColor="#ff4c5264"
            android:textSize="17sp"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"/>

        <com.wuxiaolong.pullloadmorerecyclerview.PullLoadMoreRecyclerView
            android:id="@+id/search_prepare_list_rc_list"
            android:layout_width="346dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/search_prepare_list_rl_finish">

        </com.wuxiaolong.pullloadmorerecyclerview.PullLoadMoreRecyclerView>

    </RelativeLayout>


</RelativeLayout>