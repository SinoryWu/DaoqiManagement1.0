<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F2B4D"
    tools:context=".PayEarnestMoneyActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-21dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/pay_earnest_ll_arrowleft"
                    android:layout_width="87dp"
                    android:layout_height="63dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="21dp">
                    <ImageView
                        android:layout_width="21dp"
                        android:layout_height="19dp"
                        android:src="@mipmap/arrow_left_white_icon" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="54dp"
                    android:text="支付保证金"
                    android:textColor="#ffffffff"
                    android:textSize="39sp"
                    android:layout_marginTop="141dp"
                    android:layout_marginLeft="33dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="请按以下信息缴纳保证金，并上传转账凭证"
                    android:textColor="#ffffffff"
                    android:textSize="17sp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="218dp"/>

                <TextView
                    android:layout_width="52dp"
                    android:layout_height="18dp"
                    android:text="企业名称"
                    android:textColor="#80ffffff"
                    android:textSize="13sp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="288dp"/>

                <TextView
                    android:id="@+id/pay_earnest_tv_enterprise"
                    android:layout_width="340dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="304dp"
                    android:gravity="center_vertical"
                    android:textSize="17sp"
                    android:textColor="#FFFFFF" />
                <View
                    android:layout_width="346dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="332dp"
                    android:background="#60FFFFFF"/>

                <TextView
                    android:layout_width="104dp"
                    android:layout_height="18dp"
                    android:text="开户行"
                    android:textColor="#80ffffff"
                    android:textSize="13sp"
                    android:layout_marginTop="360dp"
                    android:layout_marginLeft="33dp"/>

                <TextView
                    android:id="@+id/pay_earnest_tv_bank"
                    android:layout_width="340dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="376dp"
                    android:gravity="center_vertical"
                    android:textSize="17sp"
                    android:textColor="#FFFFFF" />

                <View
                    android:layout_width="346dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="405dp"
                    android:background="#60FFFFFF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="开户账号"
                    android:textColor="#80ffffff"
                    android:textSize="13sp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="433dp"/>


                <TextView
                    android:id="@+id/pay_earnest_tv_bank_number"
                    android:layout_width="340dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="450dp"
                    android:gravity="center_vertical"
                    android:textSize="17sp"
                    android:textColor="#FFFFFF" />

                <View
                    android:layout_width="346dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="477dp"
                    android:background="#60FFFFFF"/>

                <TextView
                    android:layout_width="52dp"
                    android:layout_height="18dp"
                    android:text="金额"
                    android:textColor="#80ffffff"
                    android:textSize="13sp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="505dp"/>


                <TextView
                    android:id="@+id/pay_earnest_tv_money_small"
                    android:layout_width="150dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="521dp"
                    android:gravity="center_vertical"
                    android:textSize="17sp"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/pay_earnest_tv_money_capital"
                    android:layout_width="150dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="521dp"
                    android:gravity="center_vertical |right"
                    android:textSize="17sp"
                    android:textColor="#FFFFFF"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="36dp"
                    />
                <View
                    android:layout_width="346dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="549dp"
                    android:background="#60FFFFFF"/>

                <TextView
                    android:layout_width="52dp"
                    android:layout_height="18dp"
                    android:text="转账凭证"
                    android:textColor="#80ffffff"
                    android:textSize="13sp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="578dp"/>

                <TextView
                    android:id="@+id/pay_earnest_tv_photo_again"
                    android:layout_width="78dp"
                    android:layout_height="36dp"
                    android:text="点击重新上传"
                    android:textColor="#ff8a56ac"
                    android:textSize="13sp"
                    android:layout_marginTop="563dp"
                    android:layout_marginLeft="301dp"
                    android:paddingTop="15dp"/>

                <RelativeLayout
                    android:layout_width="347dp"
                    android:layout_height="165dp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="603dp">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/pay_earnest_iv_photo_true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:visibility="gone"/>
                    <LinearLayout
                        android:id="@+id/pay_earnest_ll_camera"
                        android:layout_width="347dp"
                        android:layout_height="165dp"

                        android:orientation="vertical"

                        android:background="@drawable/ecology_info_camera_background">

                        <ImageView
                            android:id="@+id/pay_earnest_iv_photo_false"
                            android:layout_width="52dp"
                            android:layout_height="39dp"
                            android:src="@mipmap/photography_icon"
                            android:layout_marginTop="53dp"
                            android:layout_marginLeft="147.5dp"/>
                        <TextView
                            android:id="@+id/pay_earnest_tv_photo"
                            android:layout_width="wrap_content"
                            android:layout_height="14dp"
                            android:text="上传转账/支付凭证"
                            android:textColor="#ff4c5264"
                            android:textSize="10sp"
                            android:layout_marginTop="17dp"
                            android:layout_gravity="center_horizontal"/>



                    </LinearLayout>

                </RelativeLayout>


                <Button
                    android:id="@+id/pay_earnest_btn_submit"
                    android:layout_width="346dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="823dp"
                    android:layout_marginLeft="33dp"
                    android:background="@drawable/ecology_info_btn_background"
                    android:text="提交"
                    android:textSize="15sp"
                    android:textColor="#8A56AC"/>

                <TextView
                    android:id="@+id/pay_earnest_tv_toast"
                    android:layout_width="wrap_content"
                    android:layout_height="21dp"
                    android:text="遇到问题？请联系400-6899-570"
                    android:textColor="#80ffffff"
                    android:textSize="15sp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="900dp"/>
                <View
                    android:id="@+id/pay_earnest_bottom_view"
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:layout_below="@+id/pay_earnest_tv_toast"/>
            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>

</RelativeLayout>