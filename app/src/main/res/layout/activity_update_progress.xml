<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpDateProgressActivity"
    >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:layout_marginTop="-21dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/update_progress_rl_update_button"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/update_progress_rl_finish"
                    android:layout_width="70dp"
                    android:layout_height="58dp"
                    android:gravity="center"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="20dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/arrow_left_black_icon"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="更新进度"
                    android:textColor="#ff4c5264"
                    android:textSize="17sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="37dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="请选择医院"
                    android:textColor="#ffbcc5d3"
                    android:textSize="13sp"
                    android:layout_marginTop="88dp"
                    android:layout_marginLeft="98dp"/>
                <RelativeLayout
                    android:id="@+id/update_progress_rl_choice_hospital"
                    android:layout_width="346dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="87dp">
                    <TextView
                        android:id="@+id/update_progress_tv_hospital_name"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:text="请选择"
                        android:textColor="#ff4c5264"
                        android:textSize="17sp"
                        android:layout_marginLeft="64dp"
                        android:layout_marginTop="18dp"/>
                </RelativeLayout>

                <ImageView
                    android:id="@+id/update_progress_iv_hospital_icon"
                    android:layout_width="39dp"
                    android:layout_height="36dp"
                    android:src="@mipmap/home_fragment_hospital_list_icon"
                    android:layout_marginLeft="34dp"
                    android:layout_marginTop="90dp"/>

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="12dp"
                    android:src="@mipmap/arrow_right_black_icon"
                    android:layout_marginTop="102dp"
                    android:layout_marginLeft="374dp"/>
              
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E2E8ED"
                    android:layout_marginTop="154dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="进度描述："
                    android:textColor="#ff4c5264"
                    android:textSize="13sp"
                    android:layout_marginTop="182dp"
                    android:layout_marginLeft="33dp"/>

                <EditText
                    android:id="@+id/update_progress_et_describe"
                    android:layout_width="346dp"
                    android:layout_height="165dp"
                    android:layout_marginTop="215dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/update_progress_et_describe_background"
                    android:padding="11dp"
                    android:hint="请输入"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:maxLength="400"
                    android:gravity="top"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="备注："
                    android:textColor="#ffbcc5d3"
                    android:textSize="13sp"
                    android:layout_marginTop="402dp"
                    android:layout_marginLeft="33dp"/>

                <EditText
                    android:id="@+id/update_progress_et_remarks"
                    android:layout_width="346dp"
                    android:layout_height="88dp"
                    android:background="@drawable/update_progress_et_remarks"
                    android:layout_marginTop="435dp"
                    android:layout_centerHorizontal="true"
                    android:padding="11dp"
                    android:hint="请输入"
                    android:textSize="15sp"
                    android:gravity="top"
                    android:maxLength="200"
                    android:textColor="#000000"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="需要协助："
                    android:textColor="#ffbcc5d3"
                    android:textSize="13sp"
                    android:layout_marginTop="551dp"
                    android:layout_marginLeft="33dp"/>

                <EditText
                    android:id="@+id/update_progress_et_needHelp"
                    android:layout_width="346dp"
                    android:layout_height="88dp"
                    android:background="@drawable/update_progress_et_remarks"
                    android:layout_marginTop="584dp"
                    android:layout_centerHorizontal="true"
                    android:padding="11dp"
                    android:hint="请输入"
                    android:textSize="15sp"
                    android:gravity="top"
                    android:maxLength="200"
                    android:textColor="#000000"
                    />
                <TextView
                    android:id="@+id/update_progress_tv_addPic"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="添加图片："
                    android:textColor="#ffbcc5d3"
                    android:textSize="13sp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="701dp"/>
                <RelativeLayout
                    android:id="@+id/update_progress_rl_addPic"
                    android:layout_marginTop="737dp"
                    android:layout_width="66dp"
                    android:layout_height="66dp"
                    android:gravity="center"
                    android:layout_toRightOf="@+id/update_progress_rc_addPic"
                    android:background="#F6F6F6">

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@mipmap/add_icon"/>

                </RelativeLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/update_progress_rc_addPic"
                    android:layout_marginTop="725dp"
                    android:layout_marginLeft="33dp"
                    android:layout_width="wrap_content"
                    android:minWidth="0dp"
                    android:layout_height="78dp"/>

                <TextView
                    android:id="@+id/update_progress_tv_addFile"
                    android:layout_width="65dp"
                    android:layout_height="18dp"
                    android:text="添加附件："
                    android:textColor="#ffbcc5d3"
                    android:textSize="13sp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="828dp"/>
                
                <RelativeLayout
                    android:id="@+id/update_progress_rl_addFile"
                    android:layout_marginTop="861dp"
                    android:layout_width="66dp"
                    android:layout_height="66dp"
                    android:layout_marginLeft="33dp"
                    android:gravity="center"
                    android:background="#F6F6F6">

                    
                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@mipmap/add_icon"/>
                    
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/update_progress_rl_addFile_none"
                    android:layout_marginTop="861dp"
                    android:layout_width="wrap_content"
                    android:layout_height="66dp"
                    android:layout_marginLeft="33dp"
                    android:gravity="center"
                    android:background="#FFFFFF"
                    android:visibility="gone">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        android:text="最多添加三个附件,可删除重新选择附件。"
                        android:gravity="center"
                        android:textColor="#BCC5D3"
                        />

                </RelativeLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/update_progress_rc_addFile"
                    android:layout_width="346dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="938dp"
                    android:layout_centerHorizontal="true"/>


                <View
                    android:layout_below="@+id/update_progress_rc_addFile"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:background="#FFFFFF"/>




            </RelativeLayout>

        </ScrollView>


        <RelativeLayout
            android:id="@+id/update_progress_rl_update_button"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/fragment_home_btn_add_report_background">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="149dp"
                android:src="@mipmap/add_prepare_confirm_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="提交进度"
                android:textColor="#ffffffff"
                android:textSize="12sp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>