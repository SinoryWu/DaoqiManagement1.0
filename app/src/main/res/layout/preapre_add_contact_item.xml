<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/prepare_contact_item_name"
        android:layout_width="55dp"
        android:layout_height="wrap_content"

        android:textColor="#ff4c5264"
        android:textSize="14sp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="3dp"/>

    <TextView
        android:id="@+id/prepare_contact_item_mobile"
        android:layout_width="90dp"
        android:layout_height="wrap_content"

        android:textColor="#ff4c5264"
        android:textSize="14sp"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="3dp"/>

    <TextView
        android:id="@+id/prepare_contact_item_department"
        android:layout_width="72dp"
        android:layout_height="wrap_content"

        android:textColor="#ff4c5264"
        android:textSize="14sp"
        android:layout_marginLeft="219dp"
        android:layout_marginTop="3dp"/>
    <TextView
        android:id="@+id/prepare_contact_item_position"
        android:layout_width="43dp"
        android:layout_height="20dp"

        android:textColor="#ff4c5264"
        android:textSize="14sp"
        android:layout_marginLeft="295dp"
        android:layout_marginTop="3dp"/>

    <RelativeLayout
        android:id="@+id/prepare_contact_item_delete"
        android:layout_width="36dp"
        android:layout_height="36dp"
       android:layout_marginLeft="343dp">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginTop="3dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/delete_prepare_contact_icon"/>

    </RelativeLayout>

</RelativeLayout>