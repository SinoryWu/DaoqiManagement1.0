<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    tools:context=".PrepareDetailForUserActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:layout_marginTop="-21dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/prepare_detail_user_rl_update_progress"
            android:scrollbars="none">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/prepare_detail_user_rl_finish"
                    android:layout_width="70dp"
                    android:layout_height="58dp"
                    android:gravity="center"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="20dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/arrow_left_black_icon"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="报备详情"
                    android:textColor="#ff4c5264"
                    android:textSize="17sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="37dp"/>

                <RelativeLayout
                    android:id="@+id/prepare_detail_user_rl_hospitalDetail"
                    android:layout_width="match_parent"
                    android:layout_height="127dp"
                    android:layout_marginTop="81dp"
                    android:background="@drawable/person_tab_background">

                    <TextView
                        android:id="@+id/prepare_detail_user_tv_hospitalName"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:textColor="#ffffffff"
                        android:textSize="17sp"
                        android:layout_marginTop="26dp"
                        android:layout_marginLeft="34dp"/>

                    <TextView
                        android:id="@+id/prepare_detail_user_tv_level"
                        android:layout_width="wrap_content"
                        android:layout_height="21dp"
                        android:textColor="#80ffffff"
                        android:textSize="15sp"
                        android:layout_marginTop="49dp"
                        android:layout_marginLeft="34dp"/>

                    <TextView
                        android:id="@+id/prepare_detail_user_tv_areaName"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"

                        android:textColor="#80ffffff"
                        android:textSize="13sp"
                        android:layout_marginLeft="34dp"
                        android:layout_marginTop="80dp"/>

                    <TextView
                        android:id="@+id/prepare_detail_user_tv_nature"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:textColor="#95ffffff"
                        android:textSize="17sp"
                        android:layout_marginLeft="346dp"
                        android:layout_marginTop="26dp"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_below="@+id/prepare_detail_user_rl_hospitalDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:id="@+id/prepare_detail_user_rl_protect"
                            android:layout_width="83dp"
                            android:layout_height="93dp"
                            android:gravity="center"
                            android:layout_marginLeft="49dp">
                            <ImageView
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:src="@mipmap/prepare_detail_protect_icon"/>

                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/prepare_detail_user_rl_status"
                            android:layout_width="83dp"
                            android:layout_height="93dp"
                            android:gravity="center"
                            android:layout_marginLeft="164dp">
                            <ImageView
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:src="@mipmap/prepare_detail_status_icon"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/prepare_detail_user_rl_hospital"
                            android:layout_width="83dp"
                            android:layout_height="93dp"
                            android:gravity="center"
                            android:layout_marginLeft="280dp">
                            <ImageView
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:src="@mipmap/prepare_detail_hospital_icon"/>

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/prepare_detail_user_tv_protect"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="延长保护期"
                            android:textColor="#ff78849e"
                            android:textSize="14sp"
                            android:layout_marginLeft="55dp"
                            android:layout_marginTop="75dp"/>

                        <TextView
                            android:id="@+id/prepare_detail_user_tv_status"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="修改报备状态"
                            android:textColor="#ff78849e"
                            android:textSize="14sp"
                            android:layout_marginLeft="163dp"
                            android:layout_marginTop="75dp"/>

                        <TextView
                            android:id="@+id/prepare_detail_user_tv_hospital"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="管理医院信息"
                            android:textColor="#ff78849e"
                            android:textSize="14sp"
                            android:layout_marginLeft="279dp"
                            android:layout_marginTop="75dp"/>
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:text="状态"
                            android:textColor="#ffbcc5d3"
                            android:textSize="13sp"
                            android:layout_marginTop="54dp"
                            android:layout_marginLeft="33dp"/>

                        <TextView
                            android:id="@+id/prepare_detail_user_tv_protectTime"
                            android:layout_width="231dp"
                            android:layout_height="24dp"
                            android:textColor="#ff4c5264"
                            android:textSize="17sp"
                            android:layout_marginLeft="33dp"
                            android:layout_marginTop="69dp"/>

                        <TextView
                            android:id="@+id/prepare_detail_user_tv_delay"
                            android:layout_width="wrap_content"
                            android:layout_height="38dp"
                            android:text="延期申请"
                            android:textColor="#ff8a56ac"
                            android:textSize="17sp"
                            android:layout_marginTop="62dp"
                            android:layout_marginLeft="308dp"
                            android:gravity="center"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/prepare_detail_user_tv_submit_pay_join"
                            android:layout_width="wrap_content"
                            android:layout_height="38dp"
                            android:text="上传凭证"
                            android:textColor="#ff8a56ac"
                            android:textSize="17sp"
                            android:layout_marginTop="62dp"
                            android:gravity="center"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="33dp"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/prepare_detail_user_tv_submit_pay_delay"
                            android:layout_width="wrap_content"
                            android:layout_height="38dp"
                            android:text="上传凭证"
                            android:textColor="#ff8a56ac"
                            android:textSize="17sp"
                            android:layout_marginTop="62dp"
                            android:gravity="center"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="33dp"
                            android:visibility="gone"/>
                        <TextView
                            android:id="@+id/prepare_detail_user_tv_apply_formal"
                            android:layout_width="wrap_content"
                            android:layout_height="38dp"
                            android:text="申请正式报备"
                            android:textColor="#ff8a56ac"
                            android:textSize="17sp"
                            android:layout_marginTop="62dp"
                            android:gravity="center"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="33dp"
                            android:visibility="gone"/>



                        <View
                            android:layout_width="346dp"
                            android:layout_height="1dp"
                            android:background="#E2E8ED"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="100dp"/>

                        <TextView
                            android:layout_width="26dp"
                            android:layout_height="18dp"
                            android:text="产品"
                            android:textColor="#ffbcc5d3"
                            android:textSize="13sp"
                            android:layout_marginTop="127dp"
                            android:layout_marginLeft="33dp"/>

                        <TextView
                            android:id="@+id/prepare_detail_user_tv_productName"
                            android:layout_width="wrap_content"
                            android:layout_height="24dp"
                            android:textColor="#ff4c5264"
                            android:textSize="17sp"
                            android:layout_marginLeft="33dp"
                            android:layout_marginTop="141dp"/>

                        <View
                            android:layout_width="346dp"
                            android:layout_height="1dp"
                            android:background="#E2E8ED"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="172dp"/>

                        <TextView
                            android:layout_width="26dp"
                            android:layout_height="18dp"
                            android:text="科室"
                            android:textColor="#ffbcc5d3"
                            android:textSize="13sp"
                            android:layout_marginTop="198dp"
                            android:layout_marginLeft="33dp"/>

                        <TextView
                            android:id="@+id/prepare_detail_user_tv_department"
                            android:layout_width="wrap_content"
                            android:layout_height="24dp"
                            android:textColor="#ff4c5264"
                            android:textSize="17sp"
                            android:layout_marginLeft="33dp"
                            android:layout_marginTop="212dp"/>

                        <View
                            android:layout_width="346dp"
                            android:layout_height="1dp"
                            android:background="#E2E8ED"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="244dp"/>

                        <TextView
                            android:layout_width="52dp"
                            android:layout_height="18dp"
                            android:text="报备理由"
                            android:textColor="#ffbcc5d3"
                            android:textSize="13sp"
                            android:layout_marginTop="271dp"
                            android:layout_marginLeft="33dp"/>

                        <TextView
                            android:id="@+id/prepare_detail_user_tv_reason"
                            android:layout_width="346dp"
                            android:layout_height="wrap_content"
                            android:minHeight="24dp"
                            android:textColor="#ff4c5264"
                            android:textSize="16sp"
                            android:layout_marginLeft="33dp"
                            android:layout_marginTop="285dp"/>

                        <View
                            android:id="@+id/prepare_detail_user_view_last_line"
                            android:layout_below="@+id/prepare_detail_user_tv_reason"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#E2E8ED"
                            android:layout_marginTop="11dp"/>

                        <TextView
                            android:layout_below="@+id/prepare_detail_user_view_last_line"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:text="进度："
                            android:textColor="#ffbcc5d3"
                            android:textSize="13sp"
                            android:layout_marginTop="22dp"
                            android:layout_marginLeft="33dp"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_below="@+id/prepare_detail_user_view_last_line"
                            android:id="@+id/prepare_detail_user_rc_scheduleList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="28dp" />
                        <View
                            android:layout_below="@+id/prepare_detail_user_view_last_line"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"/>

                    </RelativeLayout>

                </LinearLayout>





            </RelativeLayout>


        </ScrollView>


        <RelativeLayout
            android:id="@+id/prepare_detail_user_rl_update_progress"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-1dp"
            android:background="@drawable/fragment_home_btn_add_report_background">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="159dp"
                android:src="@mipmap/fragment_home_hospital_btn_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="200dp"
                android:text="更新进度"
                android:textColor="#ffffffff"
                android:textSize="13sp" />
        </RelativeLayout>



    </RelativeLayout>



</RelativeLayout>