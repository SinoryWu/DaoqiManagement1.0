<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/schedule_list_item_tv_truename"
        android:layout_width="wrap_content"
        android:layout_height="18dp"

        android:textColor="#ffbcc5d3"
        android:textSize="13sp"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:layout_marginRight="33dp"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/schedule_list_item_tv_createdTime"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:textColor="#ffbcc5d3"
        android:textSize="13sp"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="33dp"/>

    <TextView
        android:id="@+id/schedule_list_item_tv_desc"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:textColor="#ff4c5264"
        android:textSize="14sp"
        android:minHeight="20dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="63dp"/>

    <View
        android:layout_below="@+id/schedule_list_item_tv_desc"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E2E8ED"
        android:layout_marginTop="28dp"/>



</RelativeLayout>