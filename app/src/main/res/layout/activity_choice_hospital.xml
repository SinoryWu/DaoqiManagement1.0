<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ChoiceHospitalActivity">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-21dp">

            <RelativeLayout
                android:id="@+id/choice_hospital_rl_tab"
                android:layout_width="match_parent"
                android:layout_height="510dp"
                android:background="#FFFFFF">


                <RelativeLayout
                    android:id="@+id/choice_hospital_rl_finish"
                    android:layout_width="70dp"
                    android:layout_height="58dp"
                    android:gravity="center"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="20dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/arrow_left_black_icon"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="选择医院"
                    android:textColor="#ff4c5264"
                    android:textSize="17sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="37dp"/>

                <TextView
                    android:layout_width="52dp"
                    android:layout_height="18dp"
                    android:text="选择地区"
                    android:textColor="#ffbcc5d3"
                    android:textSize="13sp"
                    android:layout_marginTop="110dp"
                    android:layout_marginLeft="33dp"/>

                <TextView
                    android:id="@+id/choice_hospital_tv_choice_area"
                    android:layout_width="346dp"
                    android:layout_height="28dp"
                    android:text="请选择"
                    android:textColor="#ff8a56ac"
                    android:textSize="17sp"
                   android:layout_centerHorizontal="true"
                    android:layout_marginTop="124dp"/>
                <View
                    android:layout_width="346dp"
                    android:layout_height="1dp"
                    android:background="#E2E8ED"
                    android:layout_marginTop="155dp"
                    android:layout_centerHorizontal="true"/>

                <ImageView
                    android:id="@+id/choice_hospital_iv_choice_area"
                    android:layout_width="11dp"
                    android:layout_height="6dp"
                    android:src="@mipmap/login_arrow_right_down_icon"
                    android:layout_marginTop="134dp"
                    android:layout_marginLeft="369dp"/>

                <ImageView
                    android:id="@+id/choice_hospital_iv_hospital_icon"
                    android:layout_width="39dp"
                    android:layout_height="36dp"
                    android:src="@mipmap/home_fragment_hospital_list_icon"
                    android:layout_marginTop="185dp"
                    android:layout_marginLeft="33dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="请选择医院"
                    android:textColor="#ffbcc5d3"
                    android:textSize="13sp"
                    android:layout_marginTop="183dp"
                    android:layout_marginLeft="98dp"/>

                <RelativeLayout
                    android:id="@+id/choice_hospital_rl_choice_hospital"
                    android:layout_width="346dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="183dp">
                    <TextView
                        android:id="@+id/choice_hospital_tv_hospital_name"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:text="请选择"
                        android:textColor="#ff4c5264"
                        android:textSize="17sp"
                        android:layout_marginLeft="64dp"
                        android:layout_marginTop="18dp"/>
                </RelativeLayout>
                
                <ImageView

                    android:layout_width="6dp"
                    android:layout_height="11dp"
                    android:src="@mipmap/arrow_right_black_icon"
                    android:layout_marginLeft="374dp"
                    android:layout_marginTop="196dp"/>

                <View
                    android:layout_width="346dp"
                    android:layout_height="1dp"
                    android:background="#E2E8ED"
                    android:layout_marginTop="250dp"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="医院介绍："
                    android:textColor="#ffbcc5d3"
                    android:textSize="13sp"
                    android:layout_marginTop="283dp"
                    android:layout_marginLeft="33dp"/>

                <TextView
                    android:id="@+id/choice_hospital_tv_hospital_detail"
                    android:layout_width="346dp"
                    android:layout_height="116dp"
                    android:textColor="#ffbcc5d3"
                    android:textSize="12sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="313dp"/>

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/choice_hospital_rl_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/choice_hospital_rl_tab"
                android:background="#FFFFFF">

                <TextView
                    android:id="@+id/choice_hospital_tv_submit_feedback"
                    android:layout_width="234dp"
                    android:layout_height="48dp"
                    android:text="找不到您需要的医院？点击这里提交反馈"
                    android:textColor="#ff8a56ac"
                    android:textSize="13sp"
                    android:layout_marginTop="66dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center" />


            </RelativeLayout>



        </RelativeLayout>





    <RelativeLayout

        android:layout_alignParentBottom="true"
        android:id="@+id/choice_hospital_rl_confirm"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/fragment_home_btn_add_report_background">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/add_prepare_confirm_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="146dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:text="确认选择"
            android:textColor="#ffffffff"
            android:textSize="12sp"
            android:layout_centerInParent="true"/>


    </RelativeLayout>


</RelativeLayout>