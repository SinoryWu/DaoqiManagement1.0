<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F6F6F6"
    app:cardCornerRadius="10dp"
    app:cardElevation="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F6F6F6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ecology_popwindow_tv_camera"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="拍照"
            android:paddingLeft="39dp"
            android:textSize="15sp"
            android:textColor="#4C5264"
            android:gravity="center_vertical"
            android:background="@drawable/login_press_teamchange"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B3B3B3"/>

        <TextView
            android:id="@+id/ecology_popwindow_tv_photo"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="选择照片"
            android:paddingLeft="39dp"
            android:textSize="15sp"
            android:textColor="#4C5264"
            android:gravity="center_vertical"
            android:background="@drawable/login_press_teamchange"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#B3B3B3"/>

        <TextView
            android:id="@+id/ecology_popwindow_tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="取消"
            android:paddingLeft="39dp"
            android:textSize="15sp"
            android:textColor="#4C5264"
            android:gravity="center_vertical"
            android:background="@drawable/login_press_teamchange"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>